---
import img from '/public/img.png'
import cv from '@assets/cv/CV_JOHAN_MANUEL_ALVAREZ_PINTA.pdf'

import DownloadIcon from '@assets/iconsAstro/DownloadIcon.astro'
---

<header
  class='flex flex-col sm:flex-row gap-6 items-center py-20 border-dotted border-b-[1px] border-P-background-tertiary'
>
  <picture
    class='w-48 h-48 min-w-48 min-h-48 rounded-full shadow-lg shadow-P-background-tertiary overflow-hidden border-[8px] border-P-background-tertiary'
  >
    <img
      class='w-full h-full object-cover'
      src={img.src}
      alt='image'
    />
  </picture>

  <div class='flex flex-col items-center sm:items-start gap-2'>
    <h1 class='text-3xl sm:text-5xl text-P-title-primary font-bold'>
      Johan Alvarez
    </h1>
    <p class='text-P-subtitle-primary text-lg font-semibold'>
      Desarrollador Web Front End
    </p>

    <div class='flex'>
      <a
        class='flex items-center hover:bg-green-500 hover:text-black gap-2 text-P-text-secondary bg-P-background-tertiary rounded-lg px-5 py-1 font-semibold transition-all duration-200'
        href={cv}
        title='Descargar CV'
        download
      >
        <DownloadIcon />
        CV
      </a>
    </div>
  </div>
</header>
